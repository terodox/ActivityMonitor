<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/listfragment_activity_list_item_icon"
        style="@style/AppIcon"/>
    <TextView
        android:id="@+id/listfragment_activity_list_item_name"
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/listfragment_activity_list_item_icon"/>
    <TextView
        android:id="@+id/listfragment_activity_list_item_className"
        style="@style/SubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listfragment_activity_list_item_name"
        android:layout_toRightOf="@id/listfragment_activity_list_item_icon"
        android:visibility="gone"/>

</RelativeLayout>